{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",                         // ✅ Required
    "paths": {
      "@/*": ["src/*"]                      // ✅ This maps '@/lib/utils' to 'src/lib/utils'
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
